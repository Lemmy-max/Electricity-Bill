#include <stdio.h>
int main(){
float unit_consumed;
    int customerID;
    char customer_name[50];
    printf("enter customer ID");
    scanf("%d",&customerID);
    
    printf("enter customer name");
    scanf("%s",&customer_name);
    
    printf("enter units consumed");
    scanf("%f",&unit_consumed);
   float bill; 
if (unit_consumed<100){bill=unit_consumed*1.20
;}
 else if(unit_consumed<400 && unit_consumed>199){bill=(199*1.20)+((unit_consumed-199)*1.50);
}else if(unit_consumed>=400 && unit_consumed<600){bill=((199*1.20)+(200*1.50)+(unit_consumed-399)*1.80);
    
}
if(unit_consumed>=600){bill=(unit_consumed-599)*2.00;
}
if (bill>400){bill+=bill*0.10;
}
printf("customer ID:%d\n",customerID);
printf("customer_name:%s\n",customer_name);
printf("unit_consumed:%f\n",unit_consumed);
printf("Total bill:%.2f\n",bill);

    return 0;
    
}
