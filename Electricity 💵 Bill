#include <stdio.h>

int main() {
    int units;
    float bill = 0.0;

    // Input: Number of units consumed
    printf("Enter the number of units consumed: ");
    scanf("%d", &units);

    // Calculate bill based on unit consumption
    if (units <= 100) {
        bill = units * 1.5;  // For the first 100 units
    } else if (units <= 300) {
        bill = (100 * 1.5) + ((units - 100) * 2.0);  // For the next 200 units
    } else {
        bill = (100 * 1.5) + (200 * 2.0) + ((units - 300) * 3.0);  // Above 300 units
    }

    // Check if a surcharge is applicable
    if (bill > 400) {
        bill += bill * 0.10;  // Apply a 10% surcharge
    }

    // Output the total bill
    printf("Total bill before surcharge: $%.2f\n", bill);
    if (units > 300) {
        bill = bill / 1.10;  // Calculate the original bill before surcharge
        printf("Total bill after surcharge: $%.2f\n", billonline
